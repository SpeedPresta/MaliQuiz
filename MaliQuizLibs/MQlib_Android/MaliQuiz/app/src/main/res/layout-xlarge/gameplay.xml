<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userID"
                android:layout_below="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:text="Hamadi"
                android:textSize="18sp"
                android:textAlignment="center"
                 />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cadre"
                android:id="@+id/quizTab"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false" />

            <TextView
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/quiz"
                android:layout_width="wrap_content"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229dp">

            <RelativeLayout
                android:layout_width="406dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bonus"
                    android:id="@+id/imageView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/chrono">



                <TextView
                    android:text="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/score"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.63"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="296dp"
                android:layout_height="wrap_content">

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:id="@+id/rep1"
                    android:background="@drawable/bt"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageView5" />

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="107dp"
                    android:id="@+id/rep3"
                    android:background="@drawable/bt"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_toStartOf="@+id/imageView5" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/level"
                    android:id="@+id/imageView5"
                    android:scaleType="center"
                    android:cropToPadding="false"
                    android:elevation="0dp"
                    android:adjustViewBounds="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chrono"
                    android:text="22"
                    android:textSize="36sp"
                    android:typeface="normal"
                    android:textAlignment="center"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="87dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rep4"
                    android:background="@drawable/bt"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_alignStart="@+id/rep2"
                    android:layout_weight="0.27" />

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rep2"
                    android:background="@drawable/bt"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_weight="0.28" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
            android:text="Quitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_toStartOf="@+id/rep4"
            android:id="@+id/quit"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>